<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/header"
        android:layout_width="354dp"
        android:layout_height="43dp"
        android:layout_marginTop="108dp"
        android:gravity="center"
        android:text="TicTacToe - Colman"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/playerTurn"
        android:layout_width="354dp"
        android:layout_height="43dp"
        android:layout_marginTop="168dp"
        android:gravity="center"
        android:text="Player X turn"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <GridLayout
        android:id="@+id/gameboard"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:columnCount="3"
        android:rowCount="3"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <Button
            android:id="@+id/cell00"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:id="@+id/cell01"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:id="@+id/cell02"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:id="@+id/cell10"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:id="@+id/cell11"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:id="@+id/cell12"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:id="@+id/cell20"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:id="@+id/cell21"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:id="@+id/cell22"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:text=""
            android:textSize="20sp" />

    </GridLayout>

    <Button
        android:id="@+id/resetGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="16dp"
        android:text="Reset Game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameboard" />


</androidx.constraintlayout.widget.ConstraintLayout>